<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.CardView.Elevated"
        app:cardElevation="3dp"
        app:cardCornerRadius="0dp"
        android:layout_marginBottom="2dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraint_top_selection_menu"
            android:clickable="true"
            android:focusable="false">

            <View
                android:id="@+id/top_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="?attr/colorOutline"
                app:layout_constraintBottom_toBottomOf="@+id/constraint_container_selection_top" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_container_selection_top"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/main_margin"
                android:outlineProvider="paddedBounds">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_selected_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="?attr/textAppearanceTitleLarge"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxLength="10"
                    android:text="@string/selection"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_selected_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="?attr/textAppearanceTitleMedium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/main_medium_margin"
                    android:text="5/192"
                    app:layout_constraintStart_toEndOf="@+id/text_selected_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>