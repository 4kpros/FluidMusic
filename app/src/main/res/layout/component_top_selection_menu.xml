<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_top_selection_menu"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/main_medium_margin"
        android:elevation="10dp"
        >
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_selected_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="?attr/textAppearanceTitleLarge"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="10"
            android:text="@string/selection"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_selected_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="?attr/textAppearanceTitleLarge"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginStart="@dimen/main_medium_margin"
            android:text="5/192"
            app:layout_constraintStart_toEndOf="@+id/text_selected_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>