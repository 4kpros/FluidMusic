<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/constraint_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_title"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/main_margin"
            android:gravity="center_vertical"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sort"
                app:srcCompat="@drawable/sort"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_organize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:text="@string/sort"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/main_small_margin"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/main_margin"
            android:layout_marginBottom="@dimen/main_margin"
            android:orientation="vertical"
            >
            <RadioGroup
                android:id="@+id/radio_group_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/sort_divider"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/title" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_file_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/file_name" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/artist" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_album"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/album" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/location" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/duration" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/year" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_added_updated_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/added_updated" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_playing_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/playing_date" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_random"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/random" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </RadioGroup>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>