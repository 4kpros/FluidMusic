<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.EqualizerActivity"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/top_app_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="enterAlways"
                app:title="Equalizer settings"
                app:menu="@menu/app_bar_more_vert"
                app:navigationIcon="@drawable/arrow_back"
                />
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_top_presets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingHorizontal="@dimen/margin_large_size"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_enable_equ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.CompoundButton.MaterialSwitch"
                        android:text="Equalizer"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/margin_medium_size"
                    >
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:text="Preset"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginEnd="@dimen/margin_medium_size"
                        />
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_seekbars"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintTop_toBottomOf="@+id/linear_top_presets"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/margin_large_size"
                android:layout_marginTop="@dimen/margin_small_size"
                android:layout_gravity="center_horizontal"
                >
                <include layout="@layout/_component_vertical_seek_bar"
                    />
                <include layout="@layout/_component_vertical_seek_bar"
                    />
                <include layout="@layout/_component_vertical_seek_bar"
                    />
                <include layout="@layout/_component_vertical_seek_bar"
                    />
                <include layout="@layout/_component_vertical_seek_bar"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_volume"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_seekbars"
                app:layout_constraintBottom_toTopOf="@+id/linear_audio_visualizer"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/margin_large_size"
                android:layout_marginVertical="@dimen/margin_medium_size"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:text="Volume: "
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxLength="15"
                    />
                <com.google.android.material.slider.Slider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:thumbColor="?colorPrimary"
                    app:trackColorActive="?colorPrimary"
                    app:trackColorInactive="?colorOutline"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:value="50"
                    app:tickVisible="false"
                    app:labelBehavior="gone"
                    app:thumbRadius="10dp"
                    app:thumbElevation="0dp"
                    app:trackHeight="4dp"
                    app:tickColor="@color/transparent"
                    app:haloColor="@color/transparent"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_audio_visualizer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/linear_knobs"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/margin_large_size"
                android:layout_marginVertical="@dimen/margin_medium_size"
                >
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_knobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/margin_large_size"
                >
                <include layout="@layout/_component_knob"
                    />
                <include layout="@layout/_component_knob"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>