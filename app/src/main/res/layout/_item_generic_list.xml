<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/relative_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutDescription="@xml/item_generic_list_grid_xml_constraint_layout_motion_scene"
        >
        <LinearLayout
            android:id="@+id/linear_imageview_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <com.prosabdev.fluidmusic.ui.custom.CustomShapeableImageViewImageViewRatio11
                android:id="@+id/imageview_cover_art"
                android:layout_width="@dimen/organize_list_small_image_size"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_fluid_music_icon_with_padding"
                app:shapeAppearanceOverlay="@style/ShapeFullRounded"
                android:layout_marginVertical="@dimen/margin_small_size"
                android:layout_marginStart="@dimen/margin_large_size"
                />
        </LinearLayout>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"
            android:layout_alignTop="@+id/linear_imageview_container"
            android:layout_toEndOf="@+id/linear_imageview_container"
            android:layout_marginHorizontal="@dimen/margin_large_size"
            android:paddingTop="@dimen/margin_small_size"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_alignStart="@+id/text_title"
            android:layout_alignEnd="@+id/text_title"
            android:layout_below="@+id/text_title"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:layout_alignStart="@+id/text_title"
            android:layout_toStartOf="@+id/text_now_playing"
            android:layout_below="@+id/text_subtitle"
            android:layout_marginEnd="@dimen/margin_small_size"
            android:paddingBottom="@dimen/margin_small_size"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_now_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:ellipsize="end"
            android:maxLength="10"
            android:maxLines="1"
            android:text=""
            android:layout_alignEnd="@+id/text_title"
            android:layout_alignTop="@+id/text_details"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_clickable"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/linear_imageview_container"
            >
            <View
                android:id="@+id/background_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.15"
                android:background="?colorPrimary"
                android:visibility="invisible" />
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</layout>