<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.CardView.Elevated"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/main_medium_margin"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/materialAlertDialogTitlePanelStyle"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dialog_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceTitleLarge"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/dialog_sort_title"
                android:layout_marginEnd="@dimen/main_medium_margin"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_dialog_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_medium_margin"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title_container"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_sort_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sort_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/sort"
                        style="?attr/textAppearanceLabelLarge"
                        />
                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider_sort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/sort_title"
                        android:layout_marginVertical="@dimen/main_small_margin"
                        />
                    <RadioGroup
                        android:id="@+id/radio_group_sort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/divider_sort"
                        >
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/main_small_margin"
                            >
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                >
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title"
                                    />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_file_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/file_name"
                                    />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_artist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/artist"
                                    />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_album"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/album"
                                    />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/location"
                                    />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                >
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_duration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/duration"
                                    />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_year"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/year"
                                    />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_added_modification_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/added_modification_date"
                                    />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_playing_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/playing_date"
                                    />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_random"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/random"
                                    />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </RadioGroup>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_invert_sort_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/main_medium_margin"
                        app:layout_constraintTop_toBottomOf="@+id/radio_group_sort"
                        >
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/sort_more_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="@string/others"
                            style="?attr/textAppearanceLabelLarge"
                            />
                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/divider_sort_others"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/sort_more_title"
                            android:layout_marginVertical="@dimen/main_small_margin"
                            />
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkbox_invert_sort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/invert"
                            app:layout_constraintTop_toBottomOf="@+id/divider_sort_others"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_organize_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_medium_margin"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_sort_container"
                    >
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/organize_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/organize"
                        style="?attr/textAppearanceLabelLarge"
                        />
                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider_organize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/organize_title"
                        android:layout_marginVertical="@dimen/main_small_margin"
                        />
                    <RadioGroup
                        android:id="@+id/radio_group_organize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/divider_organize"
                        android:paddingTop="@dimen/main_small_margin"
                        >
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:layout_constraintTop_toBottomOf="@+id/organize_title"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/main_small_margin"
                                >
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_dialog_small_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dialog_small_list"
                                    />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_file_dialog_medium_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dialog_medium_list"
                                    />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_dialog_large_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dialog_large_list"
                                    />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:layout_constraintTop_toBottomOf="@+id/organize_title"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/main_small_margin"
                                ><com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radio_dialog_small_grid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dialog_small_grid"
                                />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_file_dialog_medium_grid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dialog_medium_grid"
                                    />
                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/radio_dialog_large_grid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dialog_large_grid"
                                    />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </RadioGroup>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/nested_dialog_container"
            android:orientation="horizontal"
            android:paddingTop="@dimen/main_medium_margin"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.TextButton.Dialog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/close"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.TextButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:icon="@drawable/settings"
                android:text="@string/more_settings"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>