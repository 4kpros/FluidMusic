<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_container_top_play_shuffle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/play_arrow"
            android:text="Play"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/shuffle"
            android:layout_marginStart="10dp"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:text="Shuffle"
            app:layout_constraintStart_toEndOf="@+id/button_play"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/filter_list"
            android:layout_marginStart="10dp"
            style="?attr/materialIconButtonStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/hover_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/constraint_container_top_play_shuffle"
        app:layout_constraintBottom_toBottomOf="@+id/constraint_container_top_play_shuffle"
        app:layout_constraintStart_toStartOf="@+id/constraint_container_top_play_shuffle"
        app:layout_constraintEnd_toEndOf="@+id/constraint_container_top_play_shuffle"
        style="@style/DefaultBackground"
        android:clickable="true"
        android:focusable="false"
        android:visibility="gone"
        android:alpha="0"
        />
</androidx.constraintlayout.widget.ConstraintLayout>