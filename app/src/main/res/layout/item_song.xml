<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/song_item_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_marginBottom="2dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:id="@+id/song_item_is_selected"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/constraint_song_container"
            app:layout_constraintBottom_toBottomOf="@+id/constraint_song_container"
            style="@style/SongSelectedBackground"
            android:visibility="gone"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_song_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >
                <ImageView
                    android:id="@+id/song_item_imageview"
                    android:layout_width="@dimen/song_card_image_small_w"
                    android:layout_height="@dimen/song_card_image_small_h"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_fluid_music_icon_with_padding"
                    />
            </com.google.android.material.card.MaterialCardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_image"
                app:layout_constraintEnd_toStartOf="@+id/button_drag_hand"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/song_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unknown_title"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/song_item_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unknown_artist"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:layout_constraintTop_toBottomOf="@+id/song_item_title"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/song_item_artist"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/song_currently_playing"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/song_item_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:text="--:--"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/vertical_separator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:text=" | "
                            android:maxLines="1"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/song_item_type_mime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:text=""
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/song_currently_playing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="@string/now_playing"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textAppearance="?attr/textAppearanceLabelSmall"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_drag_hand"
                android:layout_width="0.1dp"
                android:layout_height="wrap_content"
                style="?attr/materialIconButtonStyle"
                app:icon="@drawable/drag_handle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="invisible"
                android:clickable="false"
                android:focusable="false"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>