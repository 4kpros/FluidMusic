<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/materialCardViewStyle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_play_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/play_arrow"
                    style="?attr/materialIconButtonStyle"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_queue_music_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/fast_forward"
                    style="?attr/materialIconButtonStyle"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/button_play_after"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_playlist_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/playlist_add"
                    style="?attr/materialIconButtonStyle"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/button_queue_music_add"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/share"
                    style="?attr/materialIconButtonStyle"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/button_playlist_add"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/delete"
                    style="?attr/materialIconButtonStyle"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/button_share"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/constraint_side_menu_hover"
                android:clickable="true"
                android:focusable="false"
                app:layout_constraintTop_toTopOf="@+id/container_icons"
                app:layout_constraintBottom_toBottomOf="@+id/container_icons"
                app:layout_constraintStart_toStartOf="@+id/container_icons"
                app:layout_constraintEnd_toEndOf="@+id/container_icons"
                style="@style/DefaultBackground"
                android:alpha="0"
                android:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>