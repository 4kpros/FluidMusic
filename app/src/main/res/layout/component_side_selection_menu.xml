<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.CardView.Elevated"
        app:cardElevation="3dp"
        android:layout_margin="2dp"
        app:strokeWidth="0dp"
        app:strokeColor="?attr/colorOutline"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_play_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/fast_forward"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_gravity="center"
                    android:contentDescription="@string/play_after"
                    android:tooltipText="@string/play_after"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_playlist_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/playlist_add"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_gravity="center"
                    android:contentDescription="@string/add_to_playlist"
                    android:tooltipText="@string/add_to_playlist"
                    app:layout_constraintTop_toBottomOf="@+id/button_play_after"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_edit_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/edit"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_gravity="center"
                    android:contentDescription="@string/edit_tags"
                    android:tooltipText="@string/edit_tags"
                    app:layout_constraintTop_toBottomOf="@+id/button_playlist_add"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/share"
                    android:contentDescription="@string/share"
                    android:tooltipText="@string/share"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/button_edit_tags"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/delete"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_gravity="center"
                    android:contentDescription="@string/delete"
                    android:tooltipText="@string/delete"
                    app:layout_constraintTop_toBottomOf="@+id/button_share"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>