<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="haveStoragePermissions"
            type="java.lang.Boolean"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.PermissionsFragment"
        android:padding="@dimen/main_margin"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_welcome_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_get_permissions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="@dimen/main_margin"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_fluid_music_icon"
                app:srcCompat="@drawable/ic_fluid_music_icon"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MaterialAlertDialog.Material3.Title.Text"
                android:text="@string/fluid_music"
                android:layout_marginBottom="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/text_get_permissions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{haveStoragePermissions ? @string/loading_configurations : @string/waiting_for_permissions}"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginVertical="@dimen/main_margin"
                />
            <include
                android:id="@+id/loading_view"
                layout="@layout/component_loading_view"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_get_permissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In order to load and play songs stored on your device, we need to have storage permissions."
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/linear_button_get_started_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="@dimen/main_margin"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_button_get_started_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="@dimen/main_margin"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_get_started"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.TonalButton"
                android:text="@string/get_permissions"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:id="@+id/hover_get_started_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/text_get_permissions"
            app:layout_constraintBottom_toBottomOf="@+id/linear_button_get_started_container"
            app:layout_constraintStart_toStartOf="@+id/text_get_permissions"
            app:layout_constraintEnd_toEndOf="@+id/text_get_permissions"
            android:clickable="true"
            android:focusable="false"
            style="@style/DefaultBackground"
            android:alpha="0"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>