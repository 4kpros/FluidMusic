<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/constraint_container_top_play_shuffle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/margin_large_size"
        android:layout_marginTop="@dimen/margin_large_size"
        android:layout_marginBottom="@dimen/margin_small_size"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/button_sort"
            android:layout_centerVertical="true"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:text="@string/play"
                app:icon="@drawable/play_arrow"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:text="@string/shuffle"
                app:icon="@drawable/shuffle"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/materialIconButtonStyle"
            app:icon="@drawable/sort"
            android:layout_toStartOf="@+id/button_organize"
            android:layout_centerVertical="true"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_organize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/materialIconButtonStyle"
            app:icon="@drawable/table_view"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</layout>